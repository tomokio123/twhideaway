<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        ユーザー編集
      </h1>
    </div>
  </div>
</section>

<!--  バリデーションの時のアナウンスメッセージの記述。-->
<% if @user.errors.any? %><!-- @placeに何かエラーがありますかってこと -->
  <div class="notification is-danger">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
    <!-- bulmaの記法。 pluralizeは単語の複数形か単数系かを判定できる記述。 -->
    <!-- エラーの数をカウントして@place.errors.count、それに応じて"error"の単語を複数形などに変換する -->
    <ul>
      <% @user.errors.full_messages.each do |message| %>
      <!-- @placeのエラーメッセージを eachにかけて、|message| に入れて一つずつ表示する。-->
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_for @user do |f| %>
          <div class="field">
            <%= f.label :username, "ユーザー名", class: "label" %>
            <%= f.text_field :username, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :email, "メールアドレス", class: "label" %>
            <%= f.email_field :email, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :profile, "プロフィール", class: "label" %>
            <%= f.text_area :profile, class: "textarea" %>
          </div>

          <div class="field">
            <%= f.label :profile_image, "プロフィール画像", class: "label" %>
            <%= f.file_field :profile_image , class: "input" %>
          </div>

          <%= f.submit "更新", class: "button is-success" %>
        <% end %>
      </div>
    </div>
  </div>
</section>
